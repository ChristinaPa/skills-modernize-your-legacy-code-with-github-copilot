{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Account Management System",
            "program": "${workspaceFolder}/src/accounting/index.js",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/accounting",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Account Management System",
            "program": "${workspaceFolder}/src/accounting/index.js",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/accounting",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "stopOnEntry": false
        }
    ]
}
